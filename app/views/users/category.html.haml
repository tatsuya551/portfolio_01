= render "shared/content_header"
.category-top.main-font
  .category-top__main
    = render "shared/content_top"
    .category-top__main__category-tag.box-center.margin-top-60
      .category-top__main__category-tag__box.display-flex.box-center
        .category-btn.background-novel.text-center
          = link_to novel_user_path(@user), class: "text-line-none text-black" do
            小説
        .category-btn.background-management.text-center.margin-left-20
          = link_to management_user_path(@user), class: "text-line-none text-black" do
            経営・戦略
        .category-btn.background-economy.text-center.margin-left-20
          = link_to economy_user_path(@user), class: "text-line-none text-black" do
            政治・経済
        .category-btn.background-finance.text-center.margin-left-20
          = link_to finance_user_path(@user), class: "text-line-none text-black" do
            ファイナンス
      .category-top__main__category-tag__box.display-flex.box-center
        .category-btn.background-it.text-center
          = link_to it_user_path(@user), class: "text-line-none text-black" do
            IT
        .category-btn.background-motivation.text-center.margin-left-20
          = link_to motivation_user_path(@user), class: "text-line-none text-black" do
            自己啓発
        .category-btn.background-talent.text-center.margin-left-20
          = link_to talent_user_path(@user), class: "text-line-none text-black" do
            タレント本
        .category-btn.background-etc.text-center.margin-left-20
          = link_to etc_user_path(@user), class: "text-line-none text-black" do
            その他
