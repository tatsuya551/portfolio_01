- users.each do |user|
  - if user.books.present?
    = link_to user_path(user), class: "follow-list text-line-none text-black" do
      .follow-list__box.display-flex
        .follow-list__box__left
          .follow-list__box__left__user.display-flex
            .follow-list__box__left__user__photo
              %img.user-photo
            .follow-list__box__left__user__name.text-black
              = user.nickname
          .follow-list__box__left__follow.display-flex
            .follow-list__box__left__follow__content.display-flex
              .follow-list__box__left__follow__content__title
                フォロー
              .follow-list__box__left__follow__content__count
                = user.followings.count
            .follow-list__box__left__follow__content.display-flex
              .follow-list__box__left__follow__content__title
                フォロワー
              .follow-list__box__left__follow__content__count
                = user.followers.count
        .follow-list__box__graph
          .follow-list__box__graph__category
            = pie_chart [['小説', user.books.category_小説.count], 
                        ['経営・戦略', user.books.category_経営・戦略.count],
                        ['政治・経済', user.books.category_政治・経済.count],
                        ['ファイナンス', user.books.category_金融・ファイナンス.count],
                        ['IT', user.books.category_IT.count],
                        ['自己啓発', user.books.category_自己啓発.count],
                        ['タレント本', user.books.category_タレント本.count],
                        ['その他', user.books.category_その他.count]], 
                        colors: ['rgba(209, 46, 31, 0.6)',
                                'rgba(246, 202, 6, 0.7)',
                                'rgba(187, 212, 26, 0.7)',
                                'rgba(0, 146, 80, 0.7)',
                                'rgba(0, 131, 174, 0.7)',
                                'rgba(50, 97, 171, 0.7)',
                                'rgba(143, 51, 150, 0.7)',
                                'rgba(182, 25, 114, 0.6)',],
                        donut: true,
                        legend: false,
                        width: "100px", height: "100px"
          .follow-list__box__graph__count.text-line-none.text-black.text-center
            = user.books.count
  - else
    .follow-user-none.text-center
      登録された本がありません